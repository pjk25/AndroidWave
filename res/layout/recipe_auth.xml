<?xml version="1.0" encoding="UTF-8"?>
<ScrollView android:id="@+id/scroll_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_x="1px"
            android:layout_y="1px"
            xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:id="@+id/request_layout"
                  android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent">
        <TextView android:id="@+id/title"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:padding="2px"
                  android:text="Recipe Authorization Request"
                  android:textSize="18sp"
                  android:textStyle="bold"
                  android:gravity="center">
        </TextView>
        <TextView android:id="@+id/app_name"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:text="Application: XXXX">
        </TextView>
        <TextView android:id="@+id/app_sig"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:text="Signature: XXXX">
        </TextView>
        <LinearLayout android:id="@+id/recipe_layout"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:padding="8px"
                      android:orientation="vertical">
            <TextView android:id="@+id/recipe_name"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:padding="2px"
                      android:text="Recipe Name"
                      android:textStyle="bold"
                      android:gravity="center">
            </TextView>
            <TextView android:id="@+id/recipe_description"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:padding="2px"
                      android:text="Recipe Description">
            </TextView>
            <TextView android:id="@+id/recipe_sig"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:padding="2px"
                      android:text="Signed by: XXXX">
            </TextView>
            <TableLayout android:id="@+id/recipe_table"
                         android:layout_width="fill_parent"
                         android:layout_height="wrap_content"
                         android:padding="2px"
                         android:orientation="vertical">
                <TableRow>
                    <TextView android:text="Sensors"
                              android:padding="3dip" />
                    <TextView android:text="Rates"
                              android:padding="3dip" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
        <Button android:id="@+id/auth_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="2px"
                android:layout_marginLeft="2px"
                android:layout_marginRight="2px"
                android:text="Authorize"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#ff009900">
        </Button>
        <Button android:id="@+id/deny_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="2px"
                android:layout_marginLeft="2px"
                android:layout_marginRight="2px"
                android:text="Deny"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#ffff0000">
        </Button>
    </LinearLayout>
</ScrollView>