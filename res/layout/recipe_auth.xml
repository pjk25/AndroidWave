<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <TextView android:id="@+id/title"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:padding="2px"
              android:text="Recipe Authorization Request"
              android:textSize="18sp"
              android:textStyle="bold"
              android:gravity="center">
    </TextView>
    <TextView android:id="@+id/app_name"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="Application: XXXX">
    </TextView>
    <TextView android:id="@+id/app_sig"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="Signature: XXXX">
    </TextView>
    <LinearLayout android:id="@+id/recipe_layout"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:padding="8px"
                  android:orientation="vertical">
        <TextView android:id="@+id/recipe_name"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:padding="2px"
                  android:text="Recipe Name"
                  android:textStyle="bold"
                  android:gravity="center">
        </TextView>
        <TextView android:id="@+id/recipe_description"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:padding="2px"
                  android:text="Recipe Description">
        </TextView>
        <TextView android:id="@+id/recipe_sig"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:padding="2px"
                  android:text="Signed by: XXXX">
        </TextView>
        <LinearLayout android:orientation="horizontal"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:weightSum="1.00">
            <TextView android:id="@+id/rate_prec_text"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="0.75"
                      android:text="Output generated at XHz, with precision X, and some random text" />
            <Button android:id="@+id/rate_prec_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:minWidth="96sp"
                    android:maxWidth="128sp"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:text="Adjust..." />
        </LinearLayout>
    </LinearLayout>
    <Button android:id="@+id/auth_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="2px"
            android:layout_marginLeft="2px"
            android:layout_marginRight="2px"
            android:text="Authorize"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#ff009900">
    </Button>
    <Button android:id="@+id/deny_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="2px"
            android:layout_marginLeft="2px"
            android:layout_marginRight="2px"
            android:text="Deny"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#ffff0000">
    </Button>
</LinearLayout>
